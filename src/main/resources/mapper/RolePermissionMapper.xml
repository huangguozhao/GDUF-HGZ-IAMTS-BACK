<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.victor.iatms.mappers.RolePermissionMapper">

    <select id="exists" resultType="int">
        SELECT COUNT(1) FROM RolePermissions WHERE role_id = #{roleId} AND permission_id = #{permissionId}
    </select>

    <insert id="insert">
        INSERT INTO RolePermissions(role_id, permission_id) VALUES(#{roleId}, #{permissionId})
    </insert>

    <insert id="batchInsert">
        INSERT INTO RolePermissions(role_id, permission_id)
        VALUES
        <foreach collection="permissionIds" item="pid" separator=",">
            (#{roleId}, #{pid})
        </foreach>
    </insert>

</mapper>
