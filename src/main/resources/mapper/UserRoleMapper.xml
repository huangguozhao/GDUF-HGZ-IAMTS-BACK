<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.victor.iatms.mappers.UserRoleMapper">

    <!-- 用户角色结果映射 -->
    <resultMap id="UserRoleResultMap" type="com.victor.iatms.entity.po.UserRole">
        <id column="user_role_id" property="userRoleId"/>
        <result column="user_id" property="userId"/>
        <result column="role_id" property="roleId"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <!-- 根据用户ID查询用户角色列表 -->
    <select id="findByUserId" parameterType="int" resultMap="UserRoleResultMap">
        SELECT 
            user_role_id, user_id, role_id, created_at
        FROM UserRoles 
        WHERE user_id = #{userId}
    </select>

    <!-- 根据角色ID查询用户角色列表 -->
    <select id="findByRoleId" parameterType="int" resultMap="UserRoleResultMap">
        SELECT 
            user_role_id, user_id, role_id, created_at
        FROM UserRoles 
        WHERE role_id = #{roleId}
    </select>


    <delete id="deleteUserRolesByUserId">
        DELETE FROM UserRoles WHERE user_id = #{userId}
    </delete>

    <insert id="batchInsertUserRoles">
        INSERT INTO UserRoles (user_id, role_id)
        VALUES
        <foreach collection="roleIds" item="roleId" separator=",">
            (#{userId}, #{roleId})
        </foreach>
    </insert>

</mapper>
